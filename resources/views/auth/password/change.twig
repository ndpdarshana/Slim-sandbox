{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row">
    <h1> Change Password...</h1>

    <form action="{{path_for('auth.changepassword')}}" method="post" autocomplete="off">
      <input type="password" name="password_old" placeholder=" Old Password" value="{{old.password}}"/>
      {% if errors.password_old %}
        <span style="color:red">{{errors.password_old | first }}</span>
      {% endif %}
      <br/>
      <input type="password" name="password_new" placeholder="New Password" value="{{old.password}}"/>
      {% if errors.password_new %}
        <span style="color:red">{{errors.password_new | first }}</span>
      {% endif %}
      </br/>
      <button type="submit">Change Password</button>

      {{ csrf.field | raw }}
    </form>
  </div>
{% endblock %}
